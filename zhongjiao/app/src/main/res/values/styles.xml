<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="registerLinearLayoutHorizontal" parent="wrap_content">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="registerEditText" parent="wrap_content">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="messageimage" parent="wrap_content">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="certificatetext" parent="wrap_content">
        <item name="android:color">@color/black1</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
