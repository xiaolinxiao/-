            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView38"
                    style="@style/certificatetext"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/zsbh"
                    android:textColor="@color/black1" />

                <TextView
                    android:id="@+id/textView39"
                    style="@style/certificatetext"
                    android:layout_alignBottom="@+id/textView38"
                    android:layout_toEndOf="@+id/textView38"
                    android:text="20110005118"
                    android:textColor="@color/black1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView40"
                    style="@style/certificatetext"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/fzjg"
                    android:textColor="@color/black1" />

                <TextView
                    android:id="@+id/textView41"
                    style="@style/certificatetext"
                    android:layout_alignBottom="@+id/textView40"
                    android:layout_toEndOf="@+id/textView40"
                    android:text="福建省建设厅"
                    android:textColor="@color/black1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView42"
                    style="@style/certificatetext"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/starttime"
                    android:textColor="@color/black1" />

                <TextView
                    android:id="@+id/textView43"
                    style="@style/certificatetext"
                    android:layout_alignBottom="@+id/textView42"
                    android:layout_toEndOf="@+id/textView42"
                    android:text="2014-7-21"
                    android:textColor="@color/black1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView44"
                    style="@style/certificatetext"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/stoptime"
                    android:textColor="@color/black1" />

                <TextView
                    android:id="@+id/textView45"
                    style="@style/certificatetext"
                    android:layout_alignBottom="@+id/textView44"
                    android:layout_toEndOf="@+id/textView44"
                    android:text="2029-7-21"
                    android:textColor="@color/black1" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
